<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/tab_text_selected" >

        <TextView
            android:id="@+id/center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/loginRegister"
            android:textColor="#ffffffff"
            android:textSize="18.0dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:text="手机号"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="200dip"
            android:layout_height="36dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bbsr_radiobtn"
            android:layout_alignBottom="@+id/bbsr_radiobtn"
            android:layout_toRightOf="@+id/ok"
            android:text="宝宝生日"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/ycq_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView1"
            android:layout_below="@+id/editText1"
            android:checked="true"
            android:focusable="false" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ycq_radiobtn"
            android:layout_alignBottom="@+id/ycq_radiobtn"
            android:layout_alignLeft="@+id/editText1"
            android:text="预产期"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/bbsr_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignRight="@+id/ok"
            android:layout_marginRight="14dp"
            android:checked="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ycq_radiobtn"
            android:layout_below="@+id/ycq_radiobtn"
            android:layout_marginTop="18dp"
            android:text="日期"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rq"
            android:layout_width="200dip"
            android:layout_height="36dip"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginRight="23dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:focusable="false"
            android:inputType="date" >
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="200dip"
            android:layout_height="36dip"
            android:layout_alignLeft="@+id/rq"
            android:layout_below="@+id/rq"
            android:layout_marginRight="23dp"
            android:layout_marginTop="28dip"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_toLeftOf="@+id/editText1"
            android:text="密码"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ok"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="确定" />
    </RelativeLayout>

</LinearLayout>